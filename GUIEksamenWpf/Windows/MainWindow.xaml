<Window x:Class="GUIEksamenWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIEksamenWpf"
        xmlns:viewModels="clr-namespace:GUIEksamenWpf.ViewModels"
        xmlns:windows="clr-namespace:GUIEksamenWpf.Windows"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewModels:EmployeeViewModel}">

            <windows:EmployeeView/>

        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:DepartmentViewModel}">

            <windows:DepartmentView/>

        </DataTemplate>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <StackPanel x:Name="navigation" DockPanel.Dock="Left">

            <Button Content="Employee" Command="{Binding EmployeeCommand}"></Button>

            <Button Content="Department" Command="{Binding DepartmentCommand}"></Button>

        </StackPanel>

        <ContentControl x:Name="Pages" DockPanel.Dock="Right" Content="{Binding SelectedViewModel}"/>

    </DockPanel>
</Window>



